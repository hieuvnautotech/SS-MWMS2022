    <div class="row">
        <div class="col-md-7">
            <h4>Standard</h4>
            <table id="dataTable1_PartialView_SD_Info_Popup1" class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr class="table-warning">
                        <th>Code</th>
