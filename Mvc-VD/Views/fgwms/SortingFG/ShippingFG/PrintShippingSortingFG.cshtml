        </thead>
    </table>
</div>


<script>
    var ExportCode = "@ViewData["Message"]";
    $(function () {
        $('#dataTable1_PartialView_SD_Info_Popup1').DataTable({
            "ajax": {
                "url": "/fgwms/GetShippingSortingFGPP?ShippingCode=" + ExportCode,
                "type": "GET",
                "datatype": "json"
            },
            "searching": false,
            "paging": false,
            "bInfo": false,
            "destroy": true,
            "columns": [
                { "data": "ShippingCode" },
                { "data": "ProductCode" },
                { "data": "ProductName" },
                { "data": "Description" },

            ],

            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 2, // your case first column
                    "className": "text-center",

                },
            ],
            "bDestroy": true,

        });
        $('#dataTable4_PartialView_SD_Info_Popup1').DataTable({
            "ajax": {

                "url": "/fgwms/GetShippingScanPP_Countbuyer?ShippingCode=" + ExportCode,
                "type": "GET",
                "datatype": "json"
            },
            "searching": false,
            "paging": false,
            "bInfo": false,
            "destroy": true,
            "columns": [
                { "data": "ProductCode" },
                { "data": "Model" },
                { "data": "countBuyer" },
                { "data": "sumQuantity" }
            ],
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // converting to interger to find total
                var intVal = function (i) {
                    return typeof i === 'string' ?
                        i.replace(/[\$,]/g, '') * 1 :
                        typeof i === 'number' ?
                            i : 0;
                };

                // computing column Total of the complete result
                var monTotal = api
                    .column(1)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                var tueTotal = api
                    .column(2)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                var wedTotal = api
                    .column(3)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);





                // Update footer by showing the total with the reference of the column index
                $(api.column(0).footer()).html('Total');
                $(api.column(1).footer()).html(monTotal);
                $(api.column(2).footer()).html(tueTotal);
                $(api.column(3).footer()).html(wedTotal);
            },
            "processing": true,
            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-left",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },


            ],
            "bDestroy": true,

        });
        var t =    $('#dataTable2_PartialView_SD_Info_Popup1').DataTable({
            "ajax": {
                "url": "/fgwms/GetListShippingFGSorting?ShippingCode=" + ExportCode,
                "type": "GET",
                "datatype": "json",
            },
            "searching": false,
            "paging": true,
            "bInfo": false,
            "destroy": true,
            "columns": [
               { "data": "id" },
                { "data": "buyer_qr" },
                { "data": "lot_no" },
                { "data": "Quantity" },
                {
                    "data": "reg_date_convert",
                   },
                { "data": "locationname" },
                  @if (ViewBag.Deleted == true)
                  {
                @Html.Raw(@"
                {
                    data: null,
                    className: 'text-center',
                    render: function (data, type, row) {
                        var html = '';
                        if (row.locationname != 'TIMS') {
                            html += '<a data-buyer_qr='+row.buyer_qr+' class=\'editor_remove btn btn-sm btn-danger\'>X</a>'
                        }
                    return html;
                    }
                },")
                      }

            ],
            //'rowsGroup': [2],
            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 2, // your case first column
                    "className": "text-left",

                },
                {
                    "targets": 3, // your case first column
                    "className": "text-left",

                },
                {
                    "targets": 4, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 5, // your case first column
                    "className": "text-center",
                },

            ],
            "lengthMenu": [[20, 50, 100, 200, 500, -1], [20, 50, 100, 200, 500, "All"]],
            "bDestroy": true,
            "order": [[1, 'asc']],
        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();


    });

    $(function () {
        var code = ExportCode;

        $('#barcode_PartialView_SD_Info_Popup1').append(code);
        $('#barcode_PartialView_SD_Info_Popup1').barcode(code, "code128", { barWidth: 1, barHeight: 30 });

        $('.popup-dialog-close').click(function () {
            $(".popup-dialog").dialog('close');
        });
    });
    function formatDate_(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();
            hours = d.getHours(),
            minutes = d.getMinutes();
            second = d.ggetSeconds();

        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;
        if (hours < 10)
            hours = '0' + hours;
        if (minutes < 10)
            minutes = '0' + minutes;

        return [year, month, day].join('-') + " " + [hours, minutes, second].join(':');
    }
    function _Date(cellvalue, options, rowObject) {

        if (cellvalue == null)
            return "";
        var reg = /(\d{4})(\d{2})(\d{2})/;
        if (reg.test(cellvalue))
            return cellvalue.replace(reg, "$1-$2-$3");
        else {
            reg = /(\d{4})(\d{2})\-(\d{2})/;
            if (reg.test(cellvalue))
                return cellvalue.replace(reg, "$1-$2-$3");
            else {
                reg = /(\d{4})\-(\d{2})(\d{2})/;
                if (reg.test(cellvalue))
                    return cellvalue.replace(reg, "$1-$2-$3");
                else {
                    reg = /(\d{4})\-(\d{2})\-(\d{2})/;
                    if (reg.test(cellvalue))
                        return cellvalue.replace(reg, "$1-$2-$3");
                    else {
                        reg = /(\d{4})(\d{2}).(\d{2})/;
                        if (reg.test(cellvalue))
                            return cellvalue.replace(reg, "$1-$2-$3");
                        else {
                            reg = /(\d{4}).(\d{2}).(\d{2})/;
                            if (reg.test(cellvalue))
                                return cellvalue.replace(reg, "$1-$2-$3");

                            else {
                                reg = /(\d{4})(\d{2})\\(\d{2})/;
                                if (reg.test(cellvalue))
                                    return cellvalue.replace(reg, "$1-$2-$3");
                                else {
                                    reg = /(\d{4})\\(\d{2})\\(\d{2})/;
                                    if (reg.test(cellvalue))
                                        return cellvalue.replace(reg, "$1-$2-$3");
                                    else {
                                        reg = /(\d{4})\\(\d{2})\.(\d{2})/;
                                        if (reg.test(cellvalue))
                                            return cellvalue.replace(reg, "$1-$2-$3");
                                        else {
                                            reg = /(\d{4})\.(\d{2})\\(\d{2})/;
                                            if (reg.test(cellvalue))
                                                return cellvalue.replace(reg, "$1-$2-$3");
                                            else
                                                return cellvalue;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
</script>
